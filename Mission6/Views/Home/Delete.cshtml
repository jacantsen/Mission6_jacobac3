@{
    ViewData["Title"] = "Delete Movie";
}
@model MovieFormResponse
<h2>Are you sure you want to delete the movie: "@Model.Title" ?  </h2>
<form method="post" asp-action="Delete">
    <button type="submit">Delete</button>
    <a class="btn-primary" asp-controller="Home" asp-action="Movie_list">Cancel</a>
    <input type="hidden" asp-for="ApplicationID"/>
</form>