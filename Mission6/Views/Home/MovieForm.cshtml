@{            ViewData["Title"] = "Movie Form";
}
@model Mission6.Models.MovieFormResponse;
<!--Movie Input Form-->
<form method="post">
    <div asp-validation-summary="All"></div>
    <label asp-for="Category">Category</label>
    <input asp-for="Category" type="text"> <br />
    <label asp-for="Title">Title</label>
    <input asp-for ="Title" type="text"><br />
    <label asp-for="Year">Year</label>
    <input asp-for="Year" type="text"><br />
    <label asp-for="Director">Director</label>
    <input asp-for="Director" type="text"><br />
    <label asp-for="Rating">Rating</label>
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select><br />
    <label asp-for="Edited">Edited</label>
    <input asp-for="Edited" type="radio" name="edited" value="true"> Yes
    <input asp-for="Edited" type="radio" name="edited" value="false"> No<br />
    <label asp-for="LentTo">Lent To</label>
    <input asp-for="LentTo" type="text"/><br />
    <label asp-for="Notes">Notes</label>
    <input asp-for="Notes" type="text"><br />
    <button type="submit" >Submit</button>
</form>